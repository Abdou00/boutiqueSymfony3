{% extends 'adminLayout.html.twig' %}
{% block content %}
    <div class="page-header text-center">
        <h1>{% block title %}{{title}}{% endblock %}</h1>
        <p class="lead">
            <a class="btn btn-primary btn-lg float-right" href="{{path('addProduct')}}" role="button">Ajouter</a>
        </p>
    </div>

    {% for msg in app.session.flashbag.get('success') %}
        <span class="alert alert-success">{{ msg }}</span>
    {% endfor %}

    <table class="table table-responsive table-striped">
        <thead class="thead-dark">
            <tr>
            <th scope="col">#</th>
            <th scope="col">Reference</th>
            <th scope="col">Categorie</th>
            <th scope="col">Titre</th>
            <th scope="col">Description</th>
            <th scope="col">Couleur</th>
            <th scope="col">Taille</th>
            <th scope="col">Public</th>
            <th scope="col">Photo</th>
            <th scope="col">Prix</th>
            <th scope="col">Stock</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>

        <tbody>
        {% for p in produits %}
            <tr>
                <th>p.id_produit</th>
                <td>{{ p.reference }}</td>
                <td>{{ p.categorie }}</td>
                <td>{{ p.titre }}</td>
                <td width="600">{{ p.description }}</td>
                <td>{{ p.couleur }}</td>
                <td>{{ p.taille }}</td>
                <td>{{ p.public }}</td>
                <td><img height="80" src="{{asset('photo/' ~p.photo)}}"/></td>
                <td>{{ p.prix }}</td>
                <td>{{ p.stock }}</td>
                <td>
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <a href="{{ path('showProduct', {'id': p.id_produit}) }}">
                                <i class="far fa-eye"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="{{ path('updateProduct', {'id': p.id_produit}) }}">
                                <i class="far fa-edit"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="{{ path('deleteProduct', {'id': p.id_produit}) }}">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
